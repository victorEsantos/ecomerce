{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Crie sua conta Grátis!</h3>
<div class="card">
    <div class="card-body">
        <form method="post">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control">

            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control">

            <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control">

            <label for="senha2">Repita sua senha:</label>
            <input type="password" name="senha2" class="form-control">

            {{#if userIsAdm}}
                <label for="isAdmin">É admin?</label>
                <select name="eAdmin" id="isAdmin" class="form-control">
                    <option value="0">Não</option>
                    <option value="1">Sim</option>
                </select>
            {{else}}

            {{/if}}
            <br>
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>
<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <br><br>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success btn-sm">Editar</button>
            </a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Del</button>
            </form>
        </div>
    </div>
{{else}}
    <h5 class="mt-5">Nenhuma categoria registrada</h5>
{{/each}}